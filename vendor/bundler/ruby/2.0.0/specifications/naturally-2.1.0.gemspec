# -*- encoding: utf-8 -*-

Gem::Specification.new do |s|
  s.name = "naturally"
  s.version = "2.1.0"

  s.required_rubygems_version = Gem::Requirement.new(">= 0") if s.respond_to? :required_rubygems_version=
  s.authors = ["Robb Shecter"]
  s.date = "2015-10-30"
  s.description = "Natural Sorting with support for legal numbering, course numbers, and other number/letter mixes."
  s.email = ["robb@weblaws.org"]
  s.homepage = "http://github.com/dogweather/naturally"
  s.licenses = ["MIT"]
  s.require_paths = ["lib"]
  s.required_ruby_version = Gem::Requirement.new(">= 2.0")
  s.rubygems_version = "2.0.14.1"
  s.summary = "Sorts numbers according to the way people are used to seeing them."
end
